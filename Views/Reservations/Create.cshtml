@{
    ViewData["Title"] = "Create a reservation";
}

<h1>Create Reservation</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            @if (User.IsInRole("Admin"))
            {
                <div class="form-group">
                    <label for="userEmail" class="control-label">User Email</label>
                    <select id="userEmail" name="userEmail" class="form-control" asp-items="ViewBag.Users"></select>
                </div>
            }
            else
            {
                <input type="hidden" id="userEmail" name="userEmail" value="@User.Identity.Name" />
            }

            <div class="form-group">
                <label for="gokartId" class="control-label">Gokart</label>
                <select id="gokartId" name="gokartId" class="form-control" asp-items="ViewBag.Gokarts"></select>
            </div>

            <div class="form-group">
                <label for="startDate" class="control-label">Start Date</label>
                <input id="startDate" name="startDate" class="form-control" type="date" />
            </div>

            <div class="form-group">
                <label for="endDate" class="control-label">End Date</label>
                <input id="endDate" name="endDate" class="form-control" type="date" />
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
