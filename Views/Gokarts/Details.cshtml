@model KartRentalCompany.Models.Gokart

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Gokart</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Manufacturer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Manufacturer)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Model.Price.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("fr-FR"))
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PricePerDay)
        </dt>
        <dd class="col-sm-10">
            @Model.PricePerDay.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("fr-FR"))
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EngineSize)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EngineSize)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImageUrl)
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.ImageUrl" alt="@Model.Name" style="max-width: 300px;" />
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
    }
    |
    <a asp-action="Index">Back to List</a>
</div>
